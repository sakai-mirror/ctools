  <!-- 
       TTD:
  -->


  <target name="searchInfo">
    <echo>
      This will extract the search tool. It should be called by the master build.xml not directly.

      The configuration values are:
      search.install.skip = ${search.install.skip}
      search.svnurl = ${search.svnurl}
      search.revision = ${search.revision}
    </echo>
  </target>


  <!-- ================================================== -->
  <!--          deal with search specific source          -->
  <!-- ================================================== -->

  <!--
  <target name="getSearchSrc" unless="search.install.skip">
    <echo>
      Extracting search tool: ${search.svnurl} revision: ${search.revision}.
    </echo>
    <delete dir="${build.dir}/search" />
    <execSvnCmd url="${search.svnurl}" revision="${search.revision}" dir="${build.dir}/search"/> 
  </target>
  -->

  <target name="getSearchSrc" depends="deleteDefaultSearchSrc,getCustomSearchSrc" />
  
  <target name="deleteDefaultSearchSrc">
    <delete dir="${build.dir}/search" />
  </target>

  <target name="getCustomSearchSrc" unless="search.install.skip">
    <echo>
      Extracting search tool: ${search.svnurl} revision: ${search.revision}.
    </echo>
    <execSvnCmd url="${search.svnurl}" revision="${search.revision}" dir="${build.dir}/search"/> 
  </target>

</project>
