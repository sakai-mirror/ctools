<project name="build-rwiki" basedir="." default="info" >

  <!--

   $Id: build-rwiki.xml 20306 2007-01-12 18:29:08Z dlhaines@umich.edu $
   $HeadURL: https://source.sakaiproject.org/svn/ctools/trunk/builds/ctools_2-3/tools/build-rwiki.xml $
   
  -->

  <!-- 
       TTD:
  -->


  <target name="rwikiInfo">
    <echo>
      This will extract the rwiki tool. It should be called by the master build.xml not directly.

      The configuration values are:
      rwiki.install.skip = ${rwiki.install.skip}
      rwiki.svnurl = ${rwiki.svnurl}
      rwiki.revision = ${rwiki.revision}
    </echo>
  </target>

  <!-- ================================================== -->
  <!--          deal with rwiki specific source          -->
  <!-- ================================================== -->

  <target name="getRwikiSrc" depends="deleteDefaultRwikiSrc,getCustomRwikiSrc" />
  
  <!-- delete old source only if installing new source -->
  <target name="deleteDefaultRwikiSrc" unless="rwiki.install.skip" >
    <delete dir="${build.dir}/rwiki" />
  </target>

  <target name="getCustomRwikiSrc" unless="rwiki.install.skip">
    <echo>
      Extracting rwiki tool: ${rwiki.svnurl} revision: ${rwiki.revision}.
    </echo>
    <execSvnCmd url="${rwiki.svnurl}" revision="${rwiki.revision}" dir="${build.dir}/rwiki"/> 
  </target>

</project>
