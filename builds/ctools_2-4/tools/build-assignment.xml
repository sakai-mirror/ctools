<project name="build-assignment" basedir="." default="info" >

  <!--

   $Id: build-assignment.xml 20306 2007-01-12 18:29:08Z dlhaines@umich.edu $
   $HeadURL: https://source.sakaiproject.org/svn/ctools/trunk/builds/ctools_2-3/tools/build-assignment.xml $
   
  -->

  <!-- 
       TTD:
  -->


  <target name="assignmentInfo">
    <echo>
      This will extract the assignment tool. It should be called by the master build.xml not directly.

      The configuration values are:
      assignment.install.skip = ${assignment.install.skip}
      assignment.svnurl = ${assignment.svnurl}
      assignment.revision = ${assignment.revision}
    </echo>
  </target>

  <!-- ================================================== -->
  <!--          deal with assignment specific source          -->
  <!-- ================================================== -->

  <target name="getAssignmentSrc" depends="deleteDefaultAssignmentSrc,getCustomAssignmentSrc" />
  
  <!-- delete old source only if installing new source -->
  <target name="deleteDefaultAssignmentSrc" unless="assignment.install.skip" >
    <delete dir="${build.dir}/assignment" />
  </target>

  <target name="getCustomAssignmentSrc" unless="assignment.install.skip">
    <echo>
      Extracting assignment tool: ${assignment.svnurl} revision: ${assignment.revision}.
    </echo>
    <execSvnCmd url="${assignment.svnurl}" revision="${assignment.revision}" dir="${build.dir}/assignment"/> 
  </target>

</project>
