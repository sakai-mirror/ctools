<project name="build-muse" basedir="." default="info" >

  <!--

   $Id: build-muse.xml 22944 2007-03-19 16:43:02Z dlhaines@umich.edu $
   $HeadURL: https://source.sakaiproject.org/svn/ctools/trunk/builds/ctools_2-4/tools/build-muse.xml $
   
   Add muse podcast tool
 
  -->

  <!-- 
       TTD:
  -->


  <target name="museInfo">
    <echo>
      This will extract the muse test and quiz engine.

      The configuration values are:

      mneme.install.skip = ${mneme.install.skip}
      mneme.svnurl = ${mneme.svnurl}
      mneme.revision = ${mneme.revision}

      ambrosia.install.skip = ${ambrosia.install.skip}
      ambrosia.svnurl = ${ambrosia.svnurl}
      ambrosia.revision = ${ambrosia.revision}
    </echo>
  </target>


  <!-- ================================================== -->
  <!-- ================================================== -->

  <target name="getMuseSrc" unless="muse.install.skip" 
	  depends="getMnemeSrc,getAmbrosiaSrc" />

  <target name="getMnemeSrc" unless="mneme.install.skip">
    <echo>
      Extracting mneme tool: ${mneme.svnurl} revision: ${mneme.revision}.
    </echo>
    <mkdir dir="${build.dir}/mneme" />
    <execSvnCmd url="${mneme.svnurl}" revision="${mneme.revision}" dir="${build.dir}/mneme"/> 

    <!-- take out the extra level of reference for the master/project.xml -->
    <!--
    <replaceregexp 
	file="${build.dir}/mneme-tool/tool/project.xml"  >
      <regexp pattern="\.\./\.\./\.\./master/project.xml" />
      <substitution  expression="../../master/project.xml" />
    </replaceregexp>
    -->

  </target>

  <target name="getAmbrosiaSrc" unless="ambrosia.install.skip">
    <echo>
      Extracting ambrosia tool: ${ambrosia.svnurl} revision: ${ambrosia.revision}.
    </echo>
    <mkdir dir="${build.dir}/ambrosia" />
    <execSvnCmd url="${ambrosia.svnurl}" revision="${ambrosia.revision}" dir="${build.dir}/ambrosia"/> 


    <!-- take out the extra level of reference for the master/project.xml -->
    <!--
    <replaceregexp 
	file="${build.dir}/ambrosia-tool/tool/project.xml"  >
      <regexp pattern="\.\./\.\./\.\./master/project.xml" />
      <substitution  expression="../../master/project.xml" />
    </replaceregexp>
    -->

  </target>

</project>
