<project name="build-sitestats" basedir="." default="info" >

  <!--

   $Id$
   $HeadURL$
   
   Add sitestats contrib tool.
 
  -->

  <!-- 
       TTD:
  -->


  <target name="sitestatsInfo" unless="sitestats.install.skip" >
    <echo>
      This will extract the Sitestats tool. It should be called by the master build.xml not directly.

      The configuration values are:
      sitestats.install.skip = ${sitestats.install.skip}
      sitestats.svnurl = ${sitestats.svnurl}
      sitestats.revision = ${sitestats.revision}
    </echo>
  </target>


  <!-- ================================================== -->
  <!--    deal with User Membership specific source       -->
  <!-- ================================================== -->

  <target name="getSitestatsSrc" unless="sitestats.install.skip">
    <echo>
      Extracting sitestats tool: ${sitestats.svnurl} revision: ${sitestats.revision}.
    </echo>
    <!-- This is trying to pull out part of the contents of only one directory contained 
    in sakai_2-2-x.  Since we specify the directory name and the default destination is '.' the
    contents of the directory will be retrieved, not the entire directory.  To get it into
    a single directory we specify an explicit destination directory rather than use the default. -->
    <execSvnCmd url="${sitestats.svnurl}" revision="${sitestats.revision}" destination="${sitestats.svndir}"/> 

  </target>

</project>
