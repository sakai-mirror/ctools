<project name="build-patches" basedir="." default="info" >

  <!--

   $Id: build-patch.xml 17111 2006-10-13 15:43:13Z dlhaines@umich.edu $
   $HeadURL: https://source.sakaiproject.org/svn/ctools/trunk/builds/ctools_2-2/tools/build-patch.xml $

   Apply patches to the code.  This is used to avoid having to have a UMich specific branch of Sakai.

  -->

  <!-- ========================================================================== -->

  <!-- Update the dependencies for this target to appropriate ones for this configuration. -->


  <target name="applyPatches" 
	  depends="allPatches"
	  /> 

  <!-- use this seperate target so that can apply the patch sets individually (for testing). -->
  <target name="allPatches" depends="applyPatches_2-3-0_p1,applyPatches_2-3-0_p2,applyPatches_2-3-0_p3,applyPatches_2-3-0_p4" >
  </target>
  
  <!-- ========================================================================== -->
  <!-- ==                    Targets for specific patch sets.                  == -->
  <!-- ========================================================================== -->


  <target name="noPatches">
    <echo>No patches to apply.</echo>
  </target>


  <target name="applyPatches_2-3-0_p1" >
    <echo message="applying patch set 2-3-0_p1" />

    <applyPatch patchFileName="SPEED.patch" />
    <applyPatch patchFileName="SAK-7049.patch" />
    <!--     <applyPatch patchFileName="SAK-7159.patch" /> -->
    <applyPatch patchFileName="SAK-7239.patch" />
    <applyPatch patchFileName="SAK-7317.patch" />
    <applyPatch patchFileName="DIRLIST.patch" />
    <applyPatch patchFileName="SAK-7431.patch" /> 
    <applyPatch patchFileName="SAK-7431B.patch" /> 
    <applyPatch patchFileName="SAK-7431C.patch" /> 
    <!--
    <applyPatch patchFileName="CT-58.patch" /> 
    -->

  </target>

  <target name="applyPatches_2-3-0_p2">
    <echo message="applying patch set 2-3-0_p2" />

    <applyPatch patchFileName="SAK-7133.patch" />
    <applyPatch patchFileName="SAK-7442.patch" />
    <applyPatch patchFileName="SAK-7518.patch" />
    <applyPatch patchFileName="SAK-7522.patch" />
    <applyPatch patchFileName="SAK-7527.patch" />

  </target>

  <target name="applyPatches_2-3-0_p3">
    <echo message="applying patch set 2-3-0_p3" />

    <applyPatch patchFileName="SAK-7615A.patch" />
    <applyPatch patchFileName="SAK-7615B.patch" />
    <applyPatch patchFileName="SAK-7672.patch" />
    <applyPatch patchFileName="SAK-7489.patch" />
    <applyPatch patchFileName="CT-659.patch" />
    <!-- <applyPatch patchFileName="SAK-7423.patch" /> -->
    <!--    <applyPatch patchFileName="SAK-6256.patch" />     -->

  </target>

  <target name="applyPatches_2-3-0_p4">
    <echo message="applying patch set 2-3-0_p4" />

    <applyPatch patchFileName="SAK-8196.patch" />

  </target>

</project>
