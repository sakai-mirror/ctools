<project name="build-evaluation" basedir="." default="info" >

  <!--

   $Id: build-evaluation.xml 22548 2007-03-13 17:02:16Z dlhaines@umich.edu $
   $HeadURL: https://source.sakaiproject.org/svn/ctools/trunk/builds/ctools_2-3/tools/build-evaluation.xml $
   
   Add evaluation  tool
 
  -->

  <!-- 
       TTD:
  -->


  <target name="evaluationInfo">
    <echo>
      This will extract the iTuneU tool. It should be called by the master build.xml not directly.

      The configuration values are:
      evaluation.install.skip = ${evaluation.install.skip}
      evaluation.svnurl = ${evaluation.svnurl}
      evaluation.revision = ${evaluation.revision}
    </echo>
  </target>


  <!-- ================================================== -->
  <!--    deal with evaluation src -->
  <!-- ================================================== -->

  <target name="getEvaluationSrc" unless="evaluation.install.skip">
    <echo>
      Extracting evaluation tool: ${evaluation.svnurl} revision: ${evaluation.revision}.
    </echo>
    <execSvnCmd url="${evaluation.svnurl}" revision="${evaluation.revision}" dir="${build.dir}/evaluation-tool" />

    <!-- take out the extra level of reference for the master/project.xml -->
    <!--
    <replaceregexp 
	file="${build.dir}/evaluation-tool/tool/project.xml"  >
      <regexp pattern="\.\./\.\./\.\./master/project.xml" />
      <substitution  expression="../../master/project.xml" />
    </replaceregexp>
    -->

  </target>

</project>
