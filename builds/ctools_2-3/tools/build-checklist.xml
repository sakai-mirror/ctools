<project name="build-checklist" basedir="." default="info" >

  <!--

   $Id: build-checklist.xml 22548 2007-03-13 17:02:16Z dlhaines@umich.edu $
   $HeadURL: https://source.sakaiproject.org/svn/ctools/trunk/builds/ctools_2-3/tools/build-checklist.xml $
   
   Add checklist tool
 
  -->

  <!-- 
       TTD:
  -->


  <target name="checklistInfo">
    <echo>
      This will extract the iTuneU podcasting tool. It should be called by the master build.xml not directly.

      The configuration values are:
      checklist.install.skip = ${checklist.install.skip}
      checklist.svnurl = ${checklist.svnurl}
      checklist.revision = ${checklist.revision}
    </echo>
  </target>


  <!-- ================================================== -->
  <!--       deal with Checklist specific source          -->
  <!-- ================================================== -->

  <target name="getChecklistSrc" unless="checklist.install.skip">
    <echo>
      Extracting checklist tool: ${checklist.svnurl} revision: ${checklist.revision}.
    </echo>
    <!-- <execSvnCmd url="${checklist.svnurl}" revision="${checklist.revision}"/>  -->
    <execSvnCmd url="${checklist.svnurl}" revision="${checklist.revision}" dir="${build.dir}/checklist"/>  


    <!-- take out the extra level of reference for the master/project.xml -->
    <!--
    <replaceregexp 
	file="${build.dir}/checklist-tool/tool/project.xml"  >
      <regexp pattern="\.\./\.\./\.\./master/project.xml" />
      <substitution  expression="../../master/project.xml" />
    </replaceregexp>
    -->

  </target>

</project>
