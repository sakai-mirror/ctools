<project name="buildUserMembership" basedir="." default="info" >

  <!--

   $Id: build.xml 5796 2006-02-06 19:03:57Z dlhaines@umich.edu $
   $HeadURL: https://source.sakaiproject.org/svn/branches/ctools-winter-06/tools/build.xml $
   
   Add the user membership tool
 
  -->

  <!-- 
       TTD:
  -->


  <target name="userMembershipInfo">
    <echo>
      This will extract the user membership tool. It should be called by the master build.xml not directly.

      The configuration values are:
      usermembership.install.skip = ${usermembership.install.skip}
      usermembership.svnurl = ${usermembership.svnurl}
      usermembership.revision = ${usermembership.revision}
    </echo>
  </target>


  <!-- ================================================== -->
  <!--    deal with User Membership specific source       -->
  <!-- ================================================== -->

  <target name="getUfpUmSrc" unless="usermembership.install.skip">
    <echo>
      Extracting user membership tool: ${usermembership.svnurl} revision: ${usermembership.revision}.
    </echo>
    <execSvnCmd url="${usermembership.svnurl}" revision="${usermembership.revision}"/> 
  </target>

</project>
