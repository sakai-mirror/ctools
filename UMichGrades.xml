              <value>Y</value>
            </list>
          </property>
          <property name="defaultBottomPercents">
            <list>
              <value>70.0</value>
              <value>69.0</value>
            </list>
          </property>
        </bean>
      </list>
    </property>
    <property name="defaultGradingScale" value="GRD"/>
  </bean>
</beans>
